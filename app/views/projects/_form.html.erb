<%= form_for @project  do |f| %>
<%= render 'shared/errors', object: @project %>

	<div class="form-container">
		<div class="form-row">

				

				<p>
				<%= f.label :name %>
				<%= f.text_field :name %>
				</p>
				<span>
				<%= f.label :objective %>
				</span>
				<p>
				<%= f.text_area :objective %>
				</p>

				<p>
				<%= f.label :timeline %>
				<%= f.select :timeline,
				Project::TIMELINE_OPTIONS,
							 promt: "Pick one" 

				 %>
				</p>

				<p>
				<%= f.label :status %>
				<%= f.select :status,
				Project::STATUS_OPTIONS,
							 promt: "Pick one"


				%>
				</p>
				<p>
				<%= f.label "Current Phase" %>
				<%= f.select :phase,
				Project::PHASE_OPTIONS,
							 promt: "Pick one"


				%>
				</p>

				
				<p>
				<%= f.label :start_date %>
				<%= f.date_field :start_date, :order =>[:month, :day, :year] %>
				</p>
				
				<% unless @project.nil? || @project.projected_end_date.nil? %>

				 	<h3> Current End Date: <%= @project.projected_end_date %></h3>

				 <% end %>
				
				
				
				
</div>
</div>

<%= f.submit %>
<% unless current_page?(controller: 'projects', action: 'new' || 'create')  %>

		<%= link_to(project_path(@project), method: :delete, data: {confirm: "ya sure you want to delete this project...there's no turning back!!"}) do  %>
				<i class="fa fa-trash-o"></i>
			<% end %>

<% end %>

</form>
</div>
				

	
<% end %>
		
