
<div class= "container show">

		<h1><%= @opp.name.titleize %><span style="color: 33333;"> -How can we help them!</span></h1>



		<div>
			<%= image_tag(@opp.image, size: "300x300")%>
		</div>

		<div> 
		Needs Help with:
		</div>

		<div> 
		<h3>Next Action:</h3> Call Peter Back 

		<br/>
		</div>



		<h3>Website: <%= link_to @opp.website, @opp.website, :target => "_blank" %></h3>

		<h3>Facebook: <%= link_to @opp.fb, @opp.fb, :target => "_blank" %></h3>
		<h3>Twitter: <%= link_to @opp.twitter, @opp.twitter, :target => "_blank" %></h3>


		<h3> In <%= @opp.phase %> Phase - <%= @opp.engagement_level %></h3>
		
		<div class="note-info">
			
			<h2>Latest Notes<h2>
			<% @notes.each do |note| %>
				

					
					<div class="note">
					<%= link_to opportunity_note_url(@opp,note) do %>
						<h3>"<%= note.title %>" - <span> <%= note.date %></span></h3>
					<% end %>

					</div>

					
			<% end %>

		</div>

		<div >                     
		                            
			<%= link_to('Edit', edit_opportunity_path) %>

			<%= link_to "Delete", opportunity_path(@opp), method: :delete, data: {confirm: "Hey ya sure you want to do this?!"} %>

			<%= link_to('View All', opportunities_path) %>
		</div>

</div>