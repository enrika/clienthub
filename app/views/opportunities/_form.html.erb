

<%= form_for(@opp) do |f| %>



<p>
<%= f.label :name %>
<%= f.text_field :name %>
</p>

<p>
<%= f.label 'Owner' %>
<%= f.text_field :prospect_name %>
</p>

<p>
<%= f.label :email %>
<%= f.text_field :email %>
</p>

<p>
<%= f.label :amount %>
<%= f.select :amount,
			 Opportunity::AMOUNT_OPTIONS,
			 promt: "Pick one" %>
</p>

<p>
<%= f.label :phase %>
<%= f.select :phase,
			 Opportunity::PHASE_OPTIONS,
			 promt: "Pick one" %>
</p>

<p>
<%= f.label :engagement_level %>
<%= f.select :engagement_level,
			 Opportunity::ENGAGE_LEVELS,
			 promt: "Pick one" %>
</p>


<p>
<%= f.label :phone %>
<%= f.text_field :phone %>
</p>



<p>
<%= f.label "Image URL" %>
<%= f.text_field :image %>
</p>



<p>
<%= f.label :company %>
<%= f.text_field :company %>
</p>

<h2>Add Social Links</h2>
<p>
<%= f.label :website %>
<%= f.text_field :website %>
</p>

<p>
<%= f.label :twitter %>
<%= f.text_field :twitter %>
</p>

<p>
<%= f.label :fb %>
<%= f.text_field :fb %>
</p>



<%= f.submit %>
<% end %>